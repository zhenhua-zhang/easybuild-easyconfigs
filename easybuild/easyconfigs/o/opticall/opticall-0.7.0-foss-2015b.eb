name = 'opticall'
version = '0.7.0'

homepage = 'https://github.com/molgenis/molgenis-pipelines'
description = """This distribution contains several pipelines/protocols/parameter files,
which you can use 'out-of-the-box' to align and impute your NGS data using MOLGENIS Compute."""

toolchain = {'name': 'foss', 'version': '2015b'}
easyblock = 'MakeCp'

#
# Example url:https://bitbucket.org/tss101/opticall/get/tip.tar.gz
#
source_urls = [('https://bitbucket.org/tss101/%s/get/' % (name))]
sources = ['tip.tar.gz']

files_to_copy = ["opticall"]

sanity_check_paths = {
    'files': ["opticall"],
    'dirs': ['']
}

moduleclass = 'bio'
